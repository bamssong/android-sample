	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

		<Button
		    android:id="@+id/playpause"
		    style="?android:attr/buttonStyleSmall"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_alignParentTop="true"
		    android:text="PlayPause" />

		<Button
		    android:id="@+id/stop"
		    style="?android:attr/buttonStyleSmall"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignTop="@+id/playpause"
		    android:layout_centerHorizontal="true"
		    android:text="Stop" />

		<Button
		    android:id="@+id/load"
		    style="?android:attr/buttonStyleSmall"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignTop="@+id/stop"
		    android:layout_marginLeft="26dp"
		    android:layout_toRightOf="@+id/stop"
		    android:text="Load" />

		<CheckBox
		    android:id="@+id/setloop"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/playpause"
		    android:layout_below="@+id/playpause"
		    android:layout_marginTop="16dp"
		    android:text="CheckBox" />

		<EditText
		    android:id="@+id/srcedt"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/stop"
		    android:layout_alignTop="@+id/setloop"
		    android:ems="10"
		    android:text="R.raw.music_test" >

		    <requestFocus />
		</EditText>
	
</RelativeLayout><!-- From: file:/Users/bamssong/workspace/repository/github/SampleAudioPlayer/app/src/main/res/layout/activity_main.xml -->